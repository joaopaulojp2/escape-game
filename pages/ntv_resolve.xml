<page id="ntv_resolve" bg_image="televisao4k.jpg" bg_music="song_2.mp3">
  <agent
    id="texto_novo"
    x="center"
    y="520"
    text="Voltar a sala"
    color="white"
    font-size="24"
    on_click="goToPage('middle')"
  />

  <agent
    id="question"
    text="O que falta ao código?"
    color="black"
    font-size="25"
    x="285"
    y="135"
  />

  <agent
    id="codigo"
    text="estudante = João  /  print(?)"
    color="blue"
    font-size="23"
    x="270"
    y="180"
  />

  <agent
    id="opcao_um"
    text="print(estudante)"
    bg_color="seagreen"
    radius="15"
    font-size="20"
    x="330"
    y="250"
    on_click="set(visible_iscas, true)"
  />

  <fab-if when="$visible_iscas = true">
    <agent
      id="mensagem"
      text="Você ganhou um isqueiro! Clique-o para coletálo, e na legenda para sair...."
      x="center"
      y="410"
      bg_color="black"
      radius="7"
      font-size="30"
      on_click="set(visible_iscas, false)"
    />
    <agent
      id="isquerito"
      image="isqueiro.png"
      width="400"
      x="center"
      y="30"
      on_click="set(tem_isqueiro, true)"
    />
  </fab-if>

  <agent
    id="opcao_tres"
    text="print(ufmacomp)"
    bg_color="$corzinha1"
    radius="15"
    font-size="20"
    x="330"
    y="359"
    on_click="set(corzinha1, 'darkred')"
  />

  <agent
    id="opcao_dois"
    text="print(feijao)"
    bg_color="$corzinha"
    radius="15"
    font-size="20"
    x="347"
    y="305"
    on_click="set(corzinha, 'darkred')"
  />
</page>
