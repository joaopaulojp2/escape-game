<page id="oet_puzzle" bg_image="armario.jpg" bg_music="song_2.mp3">
  <agent
    id="titulo"
    x="70"
    y="520"
    text="Voltar a sala"
    color="white"
    font-size="24"
    on_click="goToPage('middle')"
  />

  <agent
    id="slot_fogo"
    x="35"
    y="65"
    text=" "
    color="black"
    bg_color="rgba(231,76,60,0)"
    width="150"
    height="120"
    drop_accept="isqueirobom"
    on_drop="set(fogo_aceso, true)"
  />

  <fab-if when="$fogo_aceso = true">
    <agent
      id="fogo_vela"
      image="fogoo_photoroom.png"
      width="150"
      x="0"
      y="15"
    />
    <agent
      id="senhazinha"
      text="8451B5"
      y="220"
      x="30"
      color="rosybrown"
      font-size="25"
    />
  </fab-if>

  <fab-if when="$tem_isqueiro = true">
    <agent
      id="isqueirobom"
      image="isqueiro.png"
      draggable="true"
      width="250"
      x="500"
      y="300"
    />
  </fab-if>
</page>
