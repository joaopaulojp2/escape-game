<page id="plnt_puzzle" bg_image="planta.jpg" bg_music="song_2.mp3">
  <agent
    id="titulo"
    x="center"
    y="505"
    text="Voltar a sala"
    color="white"
    font-size="24"
    on_click="goToPage('middle')"
  />
 <fab-if when="$lista_final = false">
    <agent id="cadeado" image="cadeadooo.png" x="100" y="140" width="200" />
    <agent
      id="opcao_uum"
      text="8451B5"
      bg_color="rgb(86,65,29,0.9)"
      font-size="20"
      x="400"
      y="400"
      radius="20"
      on_click="set(cartao_acesso, true)"
    />
    <agent
      id="opcao_doois"
      text="8751B2"
      bg_color="rgb(86,65,29,0.9)"
      font-size="20"
      x="400"
      y="345"
      radius="20"
      on_click="reset()"
    />
    <agent
      id="opcao_trees"
      text="8551B8"
      bg_color="rgb(86,65,29,0.9)"
      font-size="20"
      x="400"
      y="290"
      radius="20"
      on_click="reset()"
    />
  </fab-if>

  <fab-if when="$cartao_acesso = false">
    <agent
      id="fundao"
      text=" "
      bg_color="rgb(0,0,0,0.9)"
      width="800"
      height="800"
      x="center"
      y="center"
    />
    <agent id="cartaozinho" image="passkey.png" width="430" x="center" y="0" />
    <agent
      id="mensagemzinha"
      text="Parabéns! Você conseguiu o cartão de saída, fuja agora!!!"
      bg_color="rgb(54,99,198,0.7"
      x="center"
      font-size="25"
      width="600"
      y="340"
      radius="20"
    />
    <agent
      id="cabou"
      text="Fugir!"
      x="center"
      font-size="35"
      width="140"
      bg_color="rgb(4,90,128,0.6)"
      radius="25"
      y="430"
      on_click="goToPage('ending')"
    />
  </fab-if>
</page>

</page>